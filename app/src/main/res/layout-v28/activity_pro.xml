<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMain_grey"
    tools:context=".pro">

    <Button
        android:id="@+id/btn_next3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/btn"
        android:text="@string/done"
        android:textColor="#107A16"
        android:textSize="20sp"
        app:backgroundTint=""
        app:backgroundTintMode="screen"
        app:iconTint="#00FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline8"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline7"
        app:layout_constraintTop_toBottomOf="@+id/Layout_relative_2"
        app:layout_constraintVertical_bias="0.544" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/btn2"
        android:elevation="10dp"
        android:orientation="horizontal"
        android:weightSum="3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:paddingRight="60dp"
            android:src="@drawable/ic_baseline_arrow_back_24" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/white"
            android:gravity="center"
            android:letterSpacing="0.05"
            android:paddingRight="150dp"
            android:text="@string/sign_up"
            android:textColor="@color/black"
            android:textSize="27sp"
            android:textStyle="bold" />


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/Layout_relative_2"
        android:layout_width="0dp"
        android:layout_height="469dp"
        android:layout_marginBottom="94dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_next3"
        app:layout_constraintEnd_toStartOf="@+id/guideline8"
        app:layout_constraintStart_toStartOf="@+id/guideline7"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.01999998"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="125dp"
            android:layout_marginTop="20dp"

            android:layout_marginEnd="124dp"
            android:layout_marginRight="124dp"
            android:background="@drawable/circle"
            android:foregroundGravity="center"
            android:padding="30dp"
            app:srcCompat="@android:drawable/ic_menu_camera" />

        <TextView
            android:id="@+id/editTextTextPersonName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/imageView"
            android:layout_marginTop="40dp"
            android:background="@drawable/elevation_bg"
            android:drawablePadding="10dp"
            android:elevation="10dp"
            android:ems="10"
            android:gravity=""
            android:paddingLeft="15dp"
            android:text="@string/full_name"
            android:textColor="@color/black"
            app:drawableLeftCompat="@drawable/ic_profile" />

        <TextView
            android:id="@+id/ed_ID_number"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/editTextTextPersonName"
            android:layout_marginTop="20dp"
            android:background="@drawable/elevation_bg"
            android:drawableStart="@drawable/ic_id"
            android:drawablePadding="10dp"
            android:elevation="8dp"
            android:ems="10"
            android:gravity=""
            android:paddingStart="15dp"
            android:text="@string/user_id"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/txvEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/ed_ID_number"
            android:layout_marginTop="20dp"
            android:background="@drawable/elevation_bg"
            android:drawableStart="@drawable/ic_gmail"
            android:drawablePadding="10dp"
            android:gravity=""
            android:paddingLeft="15dp"
            android:text="@string/email"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/txvEmailAddress"
            android:layout_marginTop="20dp"
            android:background="@drawable/elevation_bg"
            android:drawableStart="@drawable/ic_phone"
            android:drawablePadding="10dp"
            android:gravity=""
            android:paddingLeft="15dp"
            android:text="@string/phone"
            android:textColor="@color/black" />

    </RelativeLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="20dp" />
</androidx.constraintlayout.widget.ConstraintLayout>